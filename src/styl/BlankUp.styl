@import "genesis-colors"
@import "fira"
@import "markdown-body"
@import "preview"
@import "hljsDefault"
@import "codemirror"

html,
body
  	padding: 0
  	margin: 0
  	width: 100%
  	height: 100%

/*
	BlankUp
	The stuff we really care about.
 */

.BlankUp
	display: flex
	flex-direction: row
	width: 100%
	height: 100%
	background-color: syntax-background-color

.BlankUp-part
	flex-grow: 1
	height: 100%
	overflow-y: scroll
	padding: 0 2rem

.BlankUp-preview
	background-color: #fff
	padding-top: 2rem
	padding-bottom: 2rem
	box-sizing: border-box //Else the page will scroll instead of the preview

//Nice scrollbar
::-webkit-scrollbar
    width: 0.4rem

::-webkit-scrollbar-track
	background-color: syntax-selection-color

::-webkit-scrollbar-thumb
	background-color: saturation(mainColor, 50%)
	opacity: 0.5

.BlankUp-preview::webkit-scrollbar-track
	background-color: lighten(syntax-selection-color, 50%)

/*
	Codemirror arrangements
 */

.CodeMirror
	height: auto
	display: flex
	flex-direction: row
	justify-content: center
	padding-bottom: 2rem

//This makes sure that marked lines are all the same size
//And defines how wide the area for text is.
.CodeMirror-scroll
	max-width: 800px
	border-right: 1px solid darken(syntax-background-color, 10%)
	&::-webkit-scrollbar
		display: none
