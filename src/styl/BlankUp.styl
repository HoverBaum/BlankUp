html,
body
  	padding: 0
  	margin: 0
  	width: 100%
  	height: 100%

.BlankUp
	display: flex
	flex-direction: row
	flex-wrap: wrap
	width: 100%
	background-color: #282c34
	padding-bottom: 2rem

.BlankUp-part
	flex-grow: 1

.CodeMirror
	height: auto
	display: flex
	flex-direction: row
	justify-content: center

//This makes sure that marked lines are all the same size
//And defines how wide the area for text is.
.CodeMirror-scroll
	width: 800px
	&::-webkit-scrollbar
		display: none
